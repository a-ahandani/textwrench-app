{
  "name": "textwrench",
  "version": "0.1.964",
  "description": "Textwrench",
  "main": "./out/main/index.js",
  "author": "Ahmad Ahandani",
  "homepage": "https://textwrench.ai",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --x64 --config.win.target=nsis",
    "build:mac": "electron-vite build && electron-builder --mac --config.mac.target=dmg",
    "build:linux": "electron-vite build && electron-builder --linux --config.linux.target=AppImage"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@fontsource-variable/noto-sans-arabic": "^5.2.6",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "axios": "^1.8.2",
    "electron-app-universal-protocol-client": "2.1.1",
    "electron-log": "^5.3.1",
    "electron-updater": "^6.3.9",
    "react-hotkeys-hook": "^4.6.1",
    "react-markdown": "^10.1.0",
    "robotjs_addon": "^0.6.5"
  },
  "devDependencies": {
    "@chakra-ui/react": "^3.12.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@emotion/react": "^11.14.0",
    "@tanstack/eslint-plugin-query": "^5.67.2",
    "@tanstack/react-query": "^5.67.3",
    "@types/node": "^22.13.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-store": "^10.0.1",
    "electron-vite": "^3.0.0",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "next-themes": "^0.4.6",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.1"
  }
}
